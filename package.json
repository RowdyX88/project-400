{
  "name": "project-400",
  "version": "1.0.0",
  "description": "Panels & Timeline App",
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o assets/styles.css -m",
    "start": "http-server -p 5511 -a 127.0.0.1 -c-1 .",
  "dev": "http-server -a 127.0.0.1 -p 5511 -c-1 .",
  "dev:any": "http-server -a 0.0.0.0 -p 5511 -c-1 .",
  "dev:alt": "http-server -a 127.0.0.1 -p 5512 -c-1 .",
  "validate:data": "node scripts/validate-data.js",
  "normalize:data": "node scripts/normalize-data.js",
  "normalize:data:write": "node scripts/normalize-data.js --write"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
  "tailwindcss": "^3.4.17",
  "typescript": "^5.0.0",
  "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "husky": "^9.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate:data"
    }
  }
}
